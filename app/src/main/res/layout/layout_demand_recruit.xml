<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/inc_demand_titlebar"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        >
        <TextView
            style="@style/tv_demand_nomal"
            android:id="@+id/tv_demand_1"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="需求编号"
            />
        <TextView
            style="@style/tv_demand_datashow"
            android:id="@+id/tv_demand_number"
            android:layout_toRightOf="@id/tv_demand_1"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:text="666"
            />
        <TextView
            style="@style/tv_demand_nomal"
            android:id="@+id/tv_demand_publisher"
            android:text="发布人"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:textColor="@color/colorToolBar"
            />
    </RelativeLayout>
    <include layout="@layout/inc_dividing_small"></include>
    <include layout="@layout/inc_dividing_big"></include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                style="@style/linearlayout_demand"
               >
                <TextView
                    style="@style/tv_demand_nomal"
                    android:text="职位名称"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    style="@style/tv_demand_datashow"
                    android:id="@+id/tv_demand_recruit_jop"
                    android:layout_marginLeft="10dp"
                    android:text="软件开发"
                    />
            </LinearLayout>
            <include layout="@layout/inc_dividing_small"></include>
            <LinearLayout
                style="@style/linearlayout_demand"
                >
                <TextView
                    style="@style/tv_demand_nomal"
                    android:text="期望薪水"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    style="@style/tv_demand_datashow"
                    android:id="@+id/tv_demand_recruit_salary"
                    android:layout_marginLeft="10dp"
                    android:text="¥10K"
                    />
            </LinearLayout>
            <include layout="@layout/inc_dividing_small"></include>
            <LinearLayout
                style="@style/linearlayout_demand"
                >
                <TextView
                    style="@style/tv_demand_nomal"
                    android:text="福利保障"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    style="@style/tv_demand_datashow"
                    android:id="@+id/tv_demand_recruit_fuli"
                    android:layout_marginLeft="10dp"
                    android:text="五险一金"
                    />
            </LinearLayout>
            <include layout="@layout/inc_dividing_small"></include>
            <LinearLayout
                style="@style/linearlayout_demand"
                >
                <TextView
                    style="@style/tv_demand_nomal"
                    android:text="工作地点"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    style="@style/tv_demand_datashow"
                    android:id="@+id/tv_demand_recruit_workplace"
                    android:layout_marginLeft="10dp"
                    android:text="深圳西乡"
                    />
            </LinearLayout>
            <include layout="@layout/inc_dividing_small"></include>
            <LinearLayout
                style="@style/linearlayout_demand"
                >
                <TextView
                    style="@style/tv_demand_nomal"
                    android:text="职位类别"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    style="@style/tv_demand_datashow"
                    android:id="@+id/tv_demand_recruit_joptype"
                    android:layout_marginLeft="10dp"
                    android:text="IT"
                    />
            </LinearLayout>
            <include layout="@layout/inc_dividing_small"></include>
            <include layout="@layout/inc_dividing_big"></include>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    style="@style/tv_demand_nomal"
                    android:layout_gravity="top"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:text="职位要求"
                    />
                <TextView
                    android:id="@+id/tv_demand_recruit_require"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:minHeight="60dp"
                    android:gravity="top"
                    android:background="@null"
                    android:text="技术要牛叉aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
                    android:textSize="15sp"
                    android:textColor="@color/half_black"
                    android:maxLines="3"/>
            </LinearLayout>
            <Button
                android:id="@+id/btn_demand_recruit_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@null"
                android:text="更多"
                android:textSize="15sp"
                />
            <include layout="@layout/inc_dividing_small"></include>
            <include layout="@layout/inc_dividing_big"></include>
            <LinearLayout
                style="@style/linearlayout_demand"
                >
                <TextView
                    style="@style/tv_demand_nomal"
                    android:text="公司名称"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    style="@style/tv_demand_datashow"
                    android:id="@+id/tv_demand_company"
                    android:layout_marginLeft="10dp"
                    android:text="艾悠乐"
                    />
            </LinearLayout>
            <include layout="@layout/inc_dividing_small"></include>
            <LinearLayout
                style="@style/linearlayout_demand"
                >
                <TextView
                    style="@style/tv_demand_nomal"
                    android:text="联系人"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    style="@style/tv_demand_datashow"
                    android:id="@+id/tv_demand_person"
                    android:layout_marginLeft="10dp"
                    android:text="庞先生"
                    />
            </LinearLayout>
            <include layout="@layout/inc_dividing_small"></include>
            <LinearLayout
                style="@style/linearlayout_demand"
                >
                <TextView
                    style="@style/tv_demand_nomal"
                    android:text="联系电话"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    style="@style/tv_demand_datashow"
                    android:id="@+id/tv_demand_phone"
                    android:layout_marginLeft="10dp"
                    android:text="15766228295"
                    />
            </LinearLayout>
            <include layout="@layout/inc_dividing_small"></include>
            <include layout="@layout/inc_dividing_big"></include>
            <TextView
                android:id="@+id/btn_demand_accept"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:text="我要接单"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#fff"
                android:background="@drawable/shape_demand_btn"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
