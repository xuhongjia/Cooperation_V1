<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/inc_demand_titlebar"/>
    <ViewFlipper
        android:id="@+id/vfliper_demand_sales_fliper"
        android:layout_width="match_parent"
        android:layout_height="140dp"></ViewFlipper>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        >
        <TextView
            style="@style/tv_demand_nomal"
            android:id="@+id/tv_demand_recruit_1"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="需求编号"
            />
        <TextView
            style="@style/tv_demand_datashow"
            android:id="@+id/tv_demand_recruit_number"
            android:layout_toRightOf="@id/tv_demand_recruit_1"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:text="666"
            />
        <TextView
            style="@style/tv_demand_nomal"
            android:id="@+id/tv_demand_publisher"
            android:text="发布人"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:textColor="@color/colorToolBar"
            />
    </RelativeLayout>
    <include layout="@layout/inc_dividing_small"></include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">
                <TextView
                    style="@style/tv_demand_nomal"
                    android:text="标题"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    style="@style/tv_demand_datashow"
                    android:id="@+id/tv_demand_rental_title"
                    android:layout_marginLeft="10dp"
                    android:text="有房出租"
                    />
            </LinearLayout>
            <include layout="@layout/inc_dividing_small"></include>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">
                <TextView
                    style="@style/tv_demand_nomal"
                    android:text="区域"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    style="@style/tv_demand_datashow"
                    android:id="@+id/tv_demand_rental_place"
                    android:layout_marginLeft="10dp"
                    android:text="深圳西乡"
                    />
            </LinearLayout>
            <include layout="@layout/inc_dividing_small"></include>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">
                <TextView
                    style="@style/tv_demand_nomal"
                    android:text="小区"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    style="@style/tv_demand_datashow"
                    android:id="@+id/tv_demand_rental_village"
                    android:layout_marginLeft="10dp"
                    android:text="好耶雅苑"
                    />
            </LinearLayout>
            <include layout="@layout/inc_dividing_small"></include>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">
                <TextView
                    style="@style/tv_demand_nomal"
                    android:text="房型"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    style="@style/tv_demand_datashow"
                    android:id="@+id/tv_demand_rental_type"
                    android:layout_marginLeft="10dp"
                    android:text="三房两厅"
                    />
            </LinearLayout>
            <include layout="@layout/inc_dividing_small"></include>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">
                <TextView
                    style="@style/tv_demand_nomal"
                    android:text="租金"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    style="@style/tv_demand_datashow"
                    android:id="@+id/tv_demand_rental_rent"
                    android:layout_marginLeft="10dp"
                    android:text="¥3000"
                    />
            </LinearLayout>
            <include layout="@layout/inc_dividing_small"></include>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">
                <TextView
                    style="@style/tv_demand_nomal"
                    android:text="联系电话"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    style="@style/tv_demand_datashow"
                    android:id="@+id/tv_demand_phone"
                    android:layout_marginLeft="10dp"
                    android:text="15766228295"
                    />
            </LinearLayout>
            <include layout="@layout/inc_dividing_small"></include>
            <include layout="@layout/inc_dividing_big"></include>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">
                <TextView
                    style="@style/tv_demand_nomal"
                    android:text="面积"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    style="@style/tv_demand_datashow"
                    android:id="@+id/tv_demand_rental_area"
                    android:layout_marginLeft="10dp"
                    android:text="200平方"
                    />
            </LinearLayout>
            <include layout="@layout/inc_dividing_small"></include>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">
                <TextView
                    style="@style/tv_demand_nomal"
                    android:text="装修"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    style="@style/tv_demand_datashow"
                    android:id="@+id/tv_demand_rental_decorate"
                    android:layout_marginLeft="10dp"
                    android:text="大修过"
                    />
            </LinearLayout>
            <include layout="@layout/inc_dividing_small"></include>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">
                <TextView
                    style="@style/tv_demand_nomal"
                    android:text="朝向"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    style="@style/tv_demand_datashow"
                    android:id="@+id/tv_demand_rental_fangxiang"
                    android:layout_marginLeft="10dp"
                    android:text="南北朝向"
                    />
            </LinearLayout>
            <include layout="@layout/inc_dividing_small"></include>
            <include layout="@layout/inc_dividing_big"></include>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    style="@style/tv_demand_nomal"
                    android:layout_gravity="top"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:text="其他说明"
                    />
                <TextView
                    android:id="@+id/tv_demand_commodity_instructions"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="top"
                    android:background="@null"
                    android:text="衣服要合适好看"
                    android:textSize="15sp"
                    android:textColor="@color/half_black"
                    android:maxLines="4"/>
            </LinearLayout>
            <include layout="@layout/inc_dividing_small"></include>
            <include layout="@layout/inc_dividing_big"></include>
            <TextView
                android:id="@+id/btn_demand_accept"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:text="我要接单"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#fff"
                android:background="@drawable/shape_demand_btn"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
