<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:id="@+id/totalLayout"
    android:layout_marginTop="10dp"
    android:background="@android:color/transparent">
    <Button
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/cha"
        android:alpha="0.7"
        android:layout_margin="2dp"
        android:id="@+id/btCancel"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:layout_marginTop="25dp"
        android:weightSum="6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"

            android:weightSum="3">

            <View
                android:layout_width="0dp"
                android:layout_height="0.3dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:background="@color/grey_login">

            </View>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="请登录"
                android:textColor="@color/grey_login"
                android:textSize="14sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0.3dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:background="@color/grey_login">

            </View>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/btnLoginWeibo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/drawable_login_weibo"
                android:gravity="center" />

            <TextView
                android:id="@+id/btnLoginQQ"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/drawable_login_qq"
                android:gravity="center" />

            <TextView
                android:id="@+id/btnLoginWeixin"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.90"
                android:drawablePadding="10dp"
                android:drawableTop="@drawable/weixin"
                android:gravity="center" />
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/myinfo_btn_selector"
            android:gravity="center"
            android:text="手机号登录"
            android:id="@+id/btLogin"
            android:textColor="@color/blue_myInfo" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/myinfo_btn_selector"
            android:gravity="center"
            android:text="注册"
            android:id="@+id/btRegister"
            android:textColor="@color/blue_myInfo" />
    </LinearLayout>

</RelativeLayout>