<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_v2"
    tools:context="cn.project.aoyolo.cooperation_v1.ui.main.my.MyInfoActivity">
    <include layout="@layout/inc_my_info_header" />
    <include layout="@layout/nav_header_main"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:orientation="vertical"
            android:layout_weight="3"
            android:layout_marginTop="8dp">
            <LinearLayout
                style="@style/my_info_item_linearlayout"
                >
                <RelativeLayout
                    style="@style/my_info_relative"
                    >
                    <TextView
                        style="@style/my_info_item_left_textview"
                        android:text="昵称"/>
                    <TextView
                        android:id="@+id/my_info_name"
                        style="@style/my_info_item_right_textview"
                        android:text="为爱骑单车"
                        />

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    />
                <RelativeLayout
                    style="@style/my_info_relative"
                    >
                    <TextView
                        style="@style/my_info_item_left_textview"
                        android:text="手机号"/>
                    <TextView
                        android:id="@+id/my_info_phone"
                        style="@style/my_info_item_right_textview"
                        android:text="1313131313"
                        />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                style="@style/my_info_item_linearlayout">
                <RelativeLayout
                    style="@style/my_info_relative"
                    >
                    <TextView
                        style="@style/my_info_item_left_textview"
                        android:text="性别"
                        />
                    <TextView
                        android:id="@+id/my_info_sex"
                        style="@style/my_info_item_right_textview"
                        android:text="女"/>

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    />
                <RelativeLayout
                    style="@style/my_info_relative"
                    >
                    <TextView
                        style="@style/my_info_item_left_textview"
                        android:text="年龄"/>
                    <TextView
                        android:id="@+id/my_info_age"
                        style="@style/my_info_item_right_textview"
                        android:text="1313131313"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    />
                <RelativeLayout
                    style="@style/my_info_relative"
                    >
                    <TextView
                        style="@style/my_info_item_left_textview"
                        android:text="地址"/>
                    <TextView
                        android:id="@+id/my_info_address"
                        style="@style/my_info_item_right_textview"
                        android:text="广东省深圳市"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    />
                <RelativeLayout
                    style="@style/my_info_relative"
                    >
                    <TextView
                        style="@style/my_info_item_left_textview"
                        android:text="职业"/>
                    <TextView
                        android:id="@+id/my_info_job"
                        style="@style/my_info_item_right_textview"
                        android:text="学生"/>
                </RelativeLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                />
            <RelativeLayout
                style="@style/my_info_relative"
                >
                <TextView
                    style="@style/my_info_item_left_textview"
                    android:text="信用度"/>
                <TextView
                    android:id="@+id/my_info_credit"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:text="116"
                    android:layout_width="wrap_content"
                    android:layout_height="43dp"
                    android:paddingRight="20dp"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
