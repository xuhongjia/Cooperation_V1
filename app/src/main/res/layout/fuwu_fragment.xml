<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/spinner_order"
            android:layout_weight="1"
            android:text="服务最新"
            android:gravity="center"
            android:drawableRight="@drawable/spinner_drawable"
            android:padding="5dp"
            android:textColor="@drawable/spinner_text"
            android:background="@null"
            />
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/colorMenuBarTextSel"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/spinner_type"
            android:layout_weight="0.8"
            android:text="距离最近"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@drawable/spinner_text"
            android:background="@null"
            />
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/colorMenuBarTextSel"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/spinner_address"
            android:layout_weight="0.8"
            android:text="筛选"
            android:gravity="center"
            android:drawableRight="@drawable/spinner_drawable"
            android:padding="5dp"
            android:textColor="@drawable/spinner_text"
            android:background="@null"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorMenuBarTextSel"/>
    <cn.project.aoyolo.cooperation_v1.widget.PullToRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/refresh_view">
        <include layout="@layout/refresh_head"/>
        <cn.project.aoyolo.cooperation_v1.widget.PullableListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listview_order"
            android:padding="5dp"
            android:scrollbars="none"
            android:dividerHeight="1dp"
            android:divider="@color/gray"
            android:background="@color/white">
        </cn.project.aoyolo.cooperation_v1.widget.PullableListView>
        <include layout="@layout/load_more"/>
    </cn.project.aoyolo.cooperation_v1.widget.PullToRefreshLayout>cn.project.aoyolo.cooperation_v1.widget
</LinearLayout>

