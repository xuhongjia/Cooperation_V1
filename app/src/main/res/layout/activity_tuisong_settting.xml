<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_v2">
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorToolBar"
        android:paddingLeft="10dp"
        android:layout_marginBottom="8dp"
        android:paddingRight="10dp">
        <TextView
            android:id="@+id/my_info_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/my_info_header_left_button_selector"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="@string/yijian"
            android:layout_centerInParent="true"
            android:textSize="19sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@id/header"
        style="@style/my_info_relative"
        >
        <TextView
            style="@style/my_info_item_left_textview"
            android:text="是否推送"/>
        <RadioButton
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/tuisong_kaiguan_selector"
            android:button="@null"
            />

    </RelativeLayout>
</RelativeLayout>
