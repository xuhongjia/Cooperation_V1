<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/spinner_order"
            android:layout_weight="1"
            android:text="需求最新"
            android:gravity="center"
            android:drawableRight="@drawable/spinner_drawable"
            android:padding="5dp"
            android:textColor="@drawable/spinner_text"
            android:background="@null"
            />
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/colorMenuBarTextSel"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/spinner_type"
            android:layout_weight="0.8"
            android:text="距离最近"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@drawable/spinner_text"
            android:background="@null"
            />
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/colorMenuBarTextSel"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/spinner_address"
            android:layout_weight="0.8"
            android:text="筛选"
            android:gravity="center"
            android:drawableRight="@drawable/spinner_drawable"
            android:padding="5dp"
            android:textColor="@drawable/spinner_text"
            android:background="@null"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorMenuBarTextSel"/>
    <Button
        android:id="@+id/btn_xuqiufragement_btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试招聘界面"
        android:textSize="18sp"
        android:layout_gravity="center"
        />
    <Button
        android:id="@+id/btn_xuqiufragement_btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="测试售卖界面"
        android:textSize="18sp"
        android:layout_gravity="center"
        />
    <Button
        android:id="@+id/btn_xuqiufragement_btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="测试培训界面"
        android:textSize="18sp"
        android:layout_gravity="center"
        />
    <Button
        android:id="@+id/btn_xuqiufragement_btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="测试家政界面"
        android:textSize="18sp"
        android:layout_gravity="center"
        />
    <Button
        android:id="@+id/btn_xuqiufragement_btn5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="测试租房界面"
        android:textSize="18sp"
        android:layout_gravity="center"
        />
    <Button
        android:id="@+id/btn_xuqiufragement_btn6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="测试团购界面"
        android:textSize="18sp"
        android:layout_gravity="center"
        />
</LinearLayout>
